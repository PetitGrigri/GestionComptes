{% use "bootstrap_3_horizontal_layout.html.twig" %}


{% block form_label_class -%}
col-md-offset-1 col-sm-2 
{%- endblock form_label_class %}


{% block form_group_class -%}
col-sm-8 col-md-6
{%- endblock form_group_class %}

{%- block choice_widget_options -%}
    {% for group_label, choice in options %}
        {%- if choice is iterable -%}
            <optgroup label="{{ choice_translation_domain is same as(false) ? group_label : group_label|trans({}, choice_translation_domain) }}">
                {% set options = choice %}
                {{- block('choice_widget_options') -}}
            </optgroup>
        {%- else -%}
            {% set attr = choice.attr %}
            {% set espacement = get_start_white_space(choice.label)  %}
            
            <option value="{{ choice.value }}" {{ block('attributes') }}{% if choice is selectedchoice(value) %} selected="selected"{% endif %}>{%if espacement > 0 %}{% for i in 0..espacement %}&nbsp;{% endfor %}{%endif %}{{ choice_translation_domain is same as(false) ? choice.label : choice.label|trans({}, choice_translation_domain) }}</option>
        {%- endif -%}
    {% endfor %}
{%- endblock choice_widget_options -%}



{% block button_text_widget %}
    {% if label is empty -%}
        {% set label = name|humanize %}
    {%- endif -%}
   	<button class="{{ button_style|default('btn btn-default') }} ' btn-block'" value="{{ value }}" type="{{ type|default('button') }}" {{ block('button_attributes') }}>{{ label|trans({}, translation_domain) }}</button>
{% endblock %}